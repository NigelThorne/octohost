#!/bin/bash
source /etc/default/octohost

case "$1" in

  status)
    cd $SRC_DIR
    for i in *; do
      site=`basename $i .git`
      if (wget -S -t 3 --random-wait --delete-after -qO- http://$site.$SUFFIX 2>&1 | grep -q "HTTP/1.1 200 OK"); then
        echo "$site: OK"
      else
        echo "$site: DOWN"
      fi
    done
    ;;

  restart)
    if [ $2 ]; then
      echo "Restarting $2."
    else
      echo "Need a site to restart."
    fi
    ;;

  *)
    echo "Usage: octo <command> [options]"
    ;;
esac 
