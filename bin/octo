#!/bin/bash
source /etc/default/octohost

case "$1" in

  status)
    cd $SRC_DIR
    for i in *; do
      site=`basename $i .git`
      if (wget -S -t 1 -T 2 --delete-after -qO- http://$site.$SUFFIX 2>&1 | grep -q "HTTP/1.1 200 OK"); then
        echo -e "$site: \e[32mOK\e[0m"
      else
        echo -e "$site: \e[31mDOWN\e[0m"
      fi
    done
    ;;

  restart)
    if [ $2 ]; then
      echo "Restarting $2."
      newrev=`cd /home/git/$2.git; git log . | head -1 | cut -d ' ' -f 2`
      cd /home/git/$2.git; git archive $newrev | /home/git/receiver "$2" "$newrev" "git" "NOTHING HERE"  
      rm -rf /home/git/src/$2
    else
      echo "Need a site to restart."
    fi
    ;;

  *)
    echo "Usage: octo <command> [options]"
    ;;
esac 