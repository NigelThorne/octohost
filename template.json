{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },

    "builders": [{
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key` }}",
            "region": "us-west-2",
            "source_ami": "ami-b87fe488",
            "instance_type": "m1.small",
            "ssh_username": "ubuntu",
            "ami_name": "octohost {{timestamp}}"
            }],

    "provisioners": [{
            "type": "shell",
            "scripts": [
                "scripts/docker.sh",
                "scripts/serf.sh",
                "scripts/hipache.sh",
                "scripts/gitreceive.sh"
            ]
    }],

    "post-processors": ["vagrant"]
}
